# Application settings
# Set this to your application's base URL (no trailing slash)
BASE_URL=https://example.com
APP_HOST=example.com
APP_PORT=443

# User settings
# Default inspection limit per user (set to -1 for unlimited)
LIMIT_INSPECTIONS=10

# SMTP Email settings
# Email delivery configuration
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=notifications@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_AUTH=plain
SMTP_STARTTLS=true
DEFAULT_EMAIL_FROM=notifications@example.com

# SolidQueue settings
# Number of job workers to run in production
JOB_CONCURRENCY=2